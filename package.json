{
  "name": "polycodex",
  "version": "0.1.0",
  "description": "Multi-account wrapper for the Codex CLI",
  "type": "module",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "bun run src/cli.ts --help",
    "build": "bun build --target=node --format=esm --outfile dist/cli.js --banner=$'#!/usr/bin/env node\\n' src/cli.ts && chmod +x dist/cli.js",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "typecheck": "bunx tsc -p tsconfig.json --noEmit"
  },
  "bin": {
    "polycodex": "dist/cli.js"
  },
  "files": [
    "dist/cli.js",
    "README.md",
    "POLYCODEX_PLAN.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
