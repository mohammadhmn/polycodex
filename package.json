{
  "name": "multicodex-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "check": "bun run typecheck && bun run test && bun run build",
    "build": "turbo build",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "release": "bun run scripts/release.ts both",
    "release:cli": "bun run scripts/release.ts cli",
    "release:patch": "bun run scripts/release.ts cli --patch",
    "release:minor": "bun run scripts/release.ts cli --minor",
    "release:major": "bun run scripts/release.ts cli --major",
    "release:plan": "bun run scripts/release.ts cli --dry-run",
    "release:macos": "bun run scripts/release.ts macos",
    "macos:dev": "cd apps/macos && just dev",
    "macos:dmg": "cd apps/macos && just dmg",
    "macos:ci": "cd apps/macos && just ci"
  },
  "devDependencies": {
    "turbo": "^2.5.6"
  },
  "packageManager": "bun@1.3.9"
}
